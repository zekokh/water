<%= render('patrial/navbar', menu: {active: "заявки"}) %>

<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% if notice %>
          <br />
          <div class="alert alert-info"> <%= notice %> </div>
      <% end %>


      <% if !@orders.blank? %>

          <table class="table table-hover">

            <thead>
            <tr>
              <th>Куда</th>
              <th>Адрес</th>
              <th>Вода (бутылки)</th>
              <th>Отработка (бутылки)</th>
              <th></th>
              <th></th>
            </tr>
            </thead>

            <tbody>
            <% @orders.each do |order| %>
                <tr>
                  <td><%= order.shop %></td>
                  <td><%= order.address %></td>
                  <td><%= order.pure_water %></td>
                  <td><%= order.dirty_bottle %></td>
                  <td><%= link_to 'Изменить', edit_order_path(order) %></td>
                  <td><%= button_to 'Удалить', order, class:'btn btn-danger', data: { confirm: 'Вы уверены?' }, method: :delete %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
          <div class="alert alert-info"> Нет заявок.</div>
      <% end %>

      <br />
      <%= link_to 'Добавить заявку на поставку воды', new_order_path, class: 'btn btn-default btn', role: 'button' %>
    </div>
  </div>
</div>

<%= render('patrial/navbar', menu: {active: "склад"}) %>

<div class="container">
  <div class="row">
    <div class="col-md-8">


      <% if @stock_new.errors.any? %>
          <div id="error_explanation">

            <% @stock_new.errors.full_messages.each do |msg| %>
                <div class="alert alert-warning" role="alert"><%= msg %></div>
            <% end %>
          </div>
      <% end %>

      <%= form_for @stock_new, url: stock_index_path do |form| %>
          <%= form.text_field :pure_water, class: "form-control", placeholder: "Сколько бутылок с чистой водой", maxlength: 10 %>
          <br/>
          <%= form.text_field :empty_bottle, class: "form-control", placeholder: "Сколько пустых бутылок для чистой воды", maxlength: 10 %>
          <br/>
          <%= form.text_field :dirty_bottle, class: "form-control", placeholder: "Сколько бутылок для отработки", maxlength: 10 %>
          <br/>
          <%= form.submit 'Добавить', class: "btn btn-primary" %> <%= link_to 'Отмена', stock_index_path, class: 'btn btn-default btn', role: 'button' %>
      <% end %>
    </div>
  </div>
</div>
